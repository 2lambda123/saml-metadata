{
  "compilerOptions": {
    "target": "es2017",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "rootDirs": ["src", "test"],
    "outDir": "./build",
    "declaration": true,
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  }
}
